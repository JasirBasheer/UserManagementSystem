<%- include('../layouts/user/header') -%>
<div class="mainContainer">
<div class="Containerr">
    <div class="leftimgContainer">
        <img src="https://i.ibb.co/bKG7m3z/oie-KPj-SSUGp-IUwn.jpg" alt="sdfsd" srcset="">

    </div>
    <div class="rightContainer">
        <div class="rightinnerContainer">
            <div class="signuptext">
                <h1>Sign Up</h1>
                <p>Already have an account <a href="/"> Login</a></p>
            </div>
            <div class="signupform">
                <form action="/register" method="post">
                    <div class="form-group">
                        <label for="name">User name</label>
                        <input type="text" placeholder="User Name" name="name" id="email " class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" placeholder="Email" name="email" id="email " class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" placeholder="password" name="password" id="password " class="form-control">
                      
                    </div>
                    <% if (typeof message !== 'undefined') { %>
                        <div style="color:red;"><%= message %></div>
                      <% } %>
                    <button type="submit" class="btn" value="Login">Create account</button>
                </form>
            </div>

        </div>

    </div>



</div>
</div>
<%- include('../layouts/user/footer') -%>    